{
  "name": "preact-ts-vite-template",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "author": {
    "name": "Rene Rodriguez",
    "email": "renerod1@hotmail.com",
    "url": "https://github.com/renerod1"
  },
  "keywords": [
    "preact",
    "vite",
    "typescript",
    "sqlite3"
  ],
  "scripts": {
    "build": "pnpm typecheck && vite build",
    "build:test": "pnpm typecheck && vite build --mode test",
    "commit": "git-cz",
    "dev": "vite",
    "format": "prettier . --write --ignore-path .gitignore && git update-index --again",
    "lint": "tsc --target esnext --module NodeNext --moduleResolution NodeNext eslint.config.ts && eslint .",
    "lint:fix": "tsc --target esnext --module NodeNext --moduleResolution NodeNext eslint.config.ts && eslint . --fix",
    "prepare": "husky",
    "preview": "vite preview",
    "serve": "pnpm build && vite preview",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "dayjs": "^1.11.13",
    "i18next": "^23.16.8",
    "i18next-browser-languagedetector": "^8.0.0",
    "preact": "^10.24.3",
    "preact-i18next": "^11.8.5",
    "preact-iso": "^2.8.1",
    "preact-render-to-string": "^6.5.11",
    "semver": "^7.6.3",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@babel/parser": "^7.26.2",
    "@babel/types": "^7.26.0",
    "@eslint/js": "^9.15.0",
    "@preact/preset-vite": "^2.9.1",
    "@types/babel__core": "^7.20.5",
    "@types/babel__generator": "^7.6.8",
    "@types/babel__template": "^7.4.4",
    "@types/babel__traverse": "^7.20.6",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/eslint__js": "^8.42.3",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.15.0",
    "eslint-config-preact": "^1.5.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-formatter-friendly": "^7.0.0",
    "eslint-plugin-jest": "^28.9.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react-refresh": "^0.4.14",
    "git-format-staged": "^3.1.1",
    "globals": "^15.12.0",
    "gz-cz": "^1.0.4",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-preset-preact": "^4.1.1",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "sass": "^1.81.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.15.0",
    "vite": "^5.4.11"
  },
  "eslintConfig": {
    "extends": "preact"
  },
  "lint-staged": {
    "**/*": [
      "eslint --fix",
      "prettier --write --ignore-unknown",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
